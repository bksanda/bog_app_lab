<div class="container">
  <div class="jumbotron">

      <h1> Bog Creature: <%= @creature.name %> </h1>

      <%= render partial: "partials/flash" %>

      <p><%= @creature.desc %></p>

      <div class="img">
      <% @results[0..10].each do |photo| %>
        <a href="<%=photo.remove('_s')%>" class="img-rounded"><%= image_tag photo %></a>
      <% end %>
      </div>

      <p><b> Tags: </b>
      <% @creature.tags.each do |tag| %>
        <%= link_to tag.name, tagc_path(tag.name) %>
      <% end %>
      </p>

      <p><%= link_to '&larr; <b> back </b>'.html_safe, creatures_path %> </p>
      <p><%= link_to 'Edit', edit_creature_path(@creature) %>
      | <%= link_to 'Delete', creature_path(@creature), method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>

  </div>
</div>